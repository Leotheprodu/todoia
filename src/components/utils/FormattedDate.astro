---
import { lang } from '@/constants';

interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(lang === 'es' ? 'es-cr' : 'en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>
